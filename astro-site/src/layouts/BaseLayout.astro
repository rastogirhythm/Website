---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Rhythm Rastogi', 
  description = 'Design researcher inquiring between communities, socio-ecologies and culture.' 
} = Astro.props;

const pageTitle = title === 'Rhythm Rastogi' ? title : `${title} â€” Rhythm Rastogi`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;1,400;1,500&family=DM+Sans:ital,wght@0,400;0,500;1,400&display=swap" rel="stylesheet" />
    
    <title>{pageTitle}</title>
    
    <!-- View Transitions -->
    <meta name="view-transition" content="same-origin" />
  </head>
  <body>
    <Navigation />
    
    <main>
      <slot />
    </main>
    
    <Footer />
    
    <style>
      main {
        min-height: 100vh;
      }
    </style>
    
    <script>
      // Enable View Transitions
      document.addEventListener('astro:page-load', () => {
        // Add any page load animations here
      });
    </script>
  </body>
</html>
