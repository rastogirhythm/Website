---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const experiments = await getCollection('sandbox');
  return experiments.map((experiment) => ({
    params: { slug: experiment.slug },
    props: { experiment },
  }));
}

const { experiment } = Astro.props;
const { Content } = await experiment.render();
---

<BaseLayout title={experiment.data.title} description={experiment.data.description}>
  <article class="experiment-detail">
    <header class="experiment-header">
      <a href="/sandbox" class="back-link">← Sandbox</a>
      <h1 class="experiment-title">{experiment.data.title}</h1>
    </header>
    
    {experiment.data.image && (
      <div class="experiment-hero">
        <img src={experiment.data.image} alt={experiment.data.title} />
      </div>
    )}
    
    <div class="experiment-content prose">
      <Content />
    </div>
    
    <footer class="experiment-footer">
      <a href="/sandbox" class="link">← Back to sandbox</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .experiment-detail {
    padding: var(--space-3xl) var(--space-lg) var(--space-2xl);
    max-width: var(--max-width);
    margin: 0 auto;
  }
  
  .experiment-header {
    margin-bottom: var(--space-xl);
  }
  
  .back-link {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-decoration: none;
    display: inline-block;
    margin-bottom: var(--space-lg);
    transition: color var(--transition-fast);
  }
  
  .back-link:hover {
    color: var(--color-text);
  }
  
  .experiment-title {
    font-size: var(--text-3xl);
    font-style: italic;
  }
  
  .experiment-hero {
    margin-bottom: var(--space-xl);
    border-radius: 2px;
    overflow: hidden;
  }
  
  .experiment-hero img {
    width: 100%;
    height: auto;
  }
  
  .prose {
    max-width: var(--content-width);
    font-size: var(--text-base);
    line-height: 1.8;
  }
  
  .prose :global(p) {
    margin-bottom: var(--space-md);
    color: var(--color-text-muted);
  }
  
  .prose :global(img) {
    border-radius: 2px;
    margin: var(--space-lg) 0;
  }
  
  .experiment-footer {
    margin-top: var(--space-2xl);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-border);
  }
</style>
